= form_for(@profile, :html => { :multipart => true, :id => 'profile_form' }) do |f|
  = render :partial => 'shared/form_errors', :locals => {:target => @profile}
  %p Profile type

  = select_tag "profile[profile_type]", "<option value='10'>10</option><option value='20'>20</option><option value='100'>100</option>".html_safe

  %p Avatar

  = f.file_field :avatar

  = f.submit :id => "btn"
